
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/_LayoutUsers.cshtml";
}

<h4 style="color:red; text-align:center"> @ViewBag.Thongbao</h4>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Đăng nhập</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link href="~/Content/SignUpCss.css" rel="stylesheet" />
</head>

<body>

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="css/normalize.css">
        <link href='https://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="css/main.css">
    </head>
    <body>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <h1> ĐĂNG NHẬP</h1>

            <fieldset>

                <td>
                    <label for="mail">Email đăng nhập:</label>
                    <input type="email" id="mail" name="email_DN">
                    <div> @ViewData["Loi1"]</div>
                </td>

                <td>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password_DN">
                    <div> @ViewData["Loi2"]</div>
                </td>


            </fieldset>
            <button id="btnDK" type="submit">Đăng nhập</button>
            <div style="margin-left: 200px; color:white"> Bạn chưa có tài khoản? Hãy <a href="@Url.Action("DangKy","Users")" class="dk">ĐĂNG KÝ</a> ngay!</div>
        }
    </body>

</body>

</html>

<style type="text/css">
    .dk:hover{
        text-decoration:none;
    }
</style>