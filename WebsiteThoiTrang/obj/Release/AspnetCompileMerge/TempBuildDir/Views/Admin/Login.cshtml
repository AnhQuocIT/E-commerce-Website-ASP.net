<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Website - Admin Login</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">

    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900|RobotoDraft:400,100,300,500,700,900'>
    <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>

    <link href="~/Content/AdLoginCss/style.css" rel="stylesheet" />


</head>

<body>

    <div class="pen-title">
        <h1>Admin Login</h1>
    </div>
    <div class="container">
        <div class="card"></div>
        <div class="card">
            <h1 class="title">ĐĂNG NHẬP</h1>
            <h4 style="color:red; margin-left:50px; margin-bottom: 10px; margin-top: -5px">@ViewBag.Thongbao</h4>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
            <form>
                <div class="input-container">
                    <input type="text" name="username" id="#{label}" required="required" />
                    <label for="#{label}">Tên đăng nhập</label>
                    <div class="bar"></div>
                </div>
                <div class="input-container">
                    <input type="password" name="pass" id="#{label}" required="required" />
                    <label for="#{label}">Mật khẩu</label>
                    <div class="bar"></div>
                </div>
                
                <div class="button-container">
                    <button type="submit"><span>Go</span></button>
                </div>
                <div class="footer"><a href="#">Quên mật khẩu?</a></div>
            </form>
            }
            
        </div>
    </div>

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>


    <script src="~/Scripts/AdLoginJS/index.js"></script>
    




</body>

</html>

