@model WebsiteThoiTrang.Models.tblUser

@{
    ViewBag.Title = "DetailsUser";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN CHI TIẾT THÀNH VIÊN</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên thành viên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            Điện thoại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phone)
        </dd>

        <dt>
            Địa chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.address)
        </dd>

        <dt>
            Password:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
            Ngày tạo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.created)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "EditUser", new { id = Model.usersID }) |
    @Html.ActionLink("Quay về", "Users")
</p>
