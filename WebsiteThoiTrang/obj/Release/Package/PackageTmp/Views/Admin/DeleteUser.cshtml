@model WebsiteThoiTrang.Models.tblUser

@{
    ViewBag.Title = "DeleteUser";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h2>XÓA THÀNH VIÊN</h2>

<h3>Bạn có chắc chắn muốn xóa thành viên này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên thành viên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            Điện thoại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phone)
        </dd>

        <dt>
            Địa chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.address)
        </dd>

        <dt>
            Password:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.password)
        </dd>

        <dt>
            Ngày tạo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.created)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay về", "Users")
        </div>
    }
</div>
