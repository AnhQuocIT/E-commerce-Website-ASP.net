@using WebsiteThoiTrang.Models
@using PagedList.Mvc;
@model PagedList.PagedList<tblProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutUsers.cshtml";
}

<div class="sanpham">
    @{int i = 0; }
        @foreach (var item in Model)
        {
            i++;
            <div class="thumbnail">
                <a href="@Url.Action("Details", "Home", new { id = item.id })">
                    <img alt="@item.name" src="~/imagesSP/@item.image_link" width="200" height="300" />
                    <div>
                        <br />
                        <h4 style="text-align:center; margin-top:-3%">
                            @item.name
                        </h4>
                        <p></p>
                    </div>
                 </a>
                <div id="price">
                    <b id="gia">@String.Format("{0:0,0}", @item.price_after) VNĐ</b>
                    <b style="margin-left:10px;color:white; 
                              background-color: red; font-weight:bold; padding: 4px; 
                              border-radius: 10px">-@item.sale_off%</b>
                    <br />
                    <del id="sale">@String.Format("{0:0,0}", @item.price) VNĐ</del>
                </div>
                <div id="info">
                    <b id="sta">@item.status</b>
                    <b id="count"><b id="view"><i class="fas fa-eye"></i> @item.view_count</b><i class="fas fa-shopping-cart"></i> @item.count_buy</b>
                </div>
            </div>
            
            if (i % 3 == 0)
            {
                <div style="clear:both"></div>
            }
        }
</div>

<div class="Trang">
    <p>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </p>
</div>
